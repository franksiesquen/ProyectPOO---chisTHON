<HomeScreen>:
    MDScreen:
        MDLabel:
            text: "Bienvenido a CHISTHON"
            halign: "center"
            font_name: "Poppins/Poppins-SemiBold.ttf"
            font_size: "40sp"
            pos_hint: {"center_x":.5, "center_y":.85}

        Image:
            source: "assets/Chisthon2.png"
            size_hint: .88, .88
            pos_hint: {"center_x":.5, "center_y":.55}
            canvas.before:
                Color:
                    rgb: 0,0,0
                Ellipse:
                    size: 130, 130
                    pos: 110, 250
           
        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            padding: dp(20)

            MDRectangleFlatButton:
                text: "Empezar"
                pos_hint: {"center_x": 0.5}
                on_release: root.manager.current = "lecciones"

            

<LeccionesScreen>:
    MDScreen:
        # Colocar la barra superior directamente en la pantalla
        MDTopAppBar:
            md_bg_color: app.theme_cls.primary_color
            elevation: 1
            title: "Módulo Básico"
            pos_hint: {"top": 1}  # Asegura que esté en la parte superior
            height: dp(56)

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(15)
            size_hint: (1, None)
            height: self.minimum_height
            pos_hint: {"center_y": 0.5}  # Centra este layout verticalmente

            MDRaisedButton:
                text: "Módulo 1: Introducción"
                size_hint_x: 0.7
                pos_hint: {"center_x": 0.5}
                on_release: app.root.current = "modulo1"

            MDRaisedButton:
                text: "Módulo 2: Conceptos Básicos"
                size_hint_x: 0.7
                pos_hint: {"center_x": 0.5}
                on_release: app.root.current = "modulo2"

            MDRaisedButton:
                text: "Módulo 3: Ejercicios Prácticos"
                size_hint_x: 0.7
                pos_hint: {"center_x": 0.5}
                on_release: app.root.current = "modulo3"

            MDRaisedButton:
                text: "Test evaluativo"
                size_hint_x: 0.7
                pos_hint: {"center_x": 0.5}
                on_release: app.root.current = "test1"

            MDRectangleFlatButton:
                text: "Volver"
                size_hint: None, None
                size: dp(150), dp(40)
                on_release: root.manager.current = "home"





<ConsoleScreen>:
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(10)
            padding: dp(10)

            MDLabel:
                text: "Consola de Python"
                halign: "center"
                font_style: "H5"
                theme_text_color: "Primary"
                size_hint_y: None
                height: dp(50)

            MDTextField:
                id: code_input
                hint_text: "Escribe tu código aquí"
                multiline: True
                mode: "rectangle"
                size_hint_y: 0.4

            MDRaisedButton:
                text: "Ejecutar"
                size_hint: None, None
                size: "150dp", "50dp"
                pos_hint: {"center_x": 0.5}
                on_press: app.run_code()

            MDTextField:
                id: output_console
                hint_text: "Salida"
                multiline: True
                readonly: True
                mode: "rectangle"
                size_hint_y: 0.4

            MDRaisedButton:
                text: "Regresar"
                size_hint: None, None
                size: "150dp", "50dp"
                pos_hint: {"center_x": 0.5}
                on_press: app.go_back() 